
    <div class="row justify-content-center">
      <div class="col-sm-6">
        <%= form_tag cars_path, method: :get do %>
        <div class="search-form-control form-group" style="margin-top: 48px">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "e.g. car name, year"
          %>
          <%= submit_tag "Find your ride", class: "btn btn-flat" %>
        </div>
       <% end %>
      </div>
    </div>
 